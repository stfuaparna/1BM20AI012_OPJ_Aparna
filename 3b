public class Temperature
{
	private double temperature;
	private char scale;

	public Temperature()
	{
		temperature = 0;
		scale = 'C';
	}
	
	public Temperature(char scale)
	{
		this.scale = scale;
		temperature = 0;
	}
	
	public Temperature(double temperature)
	{
		this.temperature = temperature;
		scale = 'C';
	}

	public Temperature(double temperature, char scale)
	{
		this.temperature = temperature;
		this.scale = scale;
	}
